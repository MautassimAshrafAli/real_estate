            <div class="row">
                <div class="col-lg-8 col-md-8" id="email_location">

                </div>
                <div class="col-lg-4 col-md-4" id="social_links">

                </div>
            </div>
        </div>
    </div>


    <div class="sub-header">
        <div style="width: fit-content;margin: auto;">
            <a href="/Home/Index">
                <img src="~/Content/assets/images/real_estate_logo.png" style="width: 33%; height: 33%; display: block; margin: auto;" />
            </a>
        </div>
    </div>
    <main>
        @RenderBody()

        <div id="agent_info">


        </div>

    </main>

