    <!-- Vendor JS-->
    <script src="~/Content/search/vendor/select2/select2.min.js"></script>
    <script src="~/Content/search/vendor/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/Content/search/vendor/bootstrap-wizard/bootstrap.min.js"></script>
    <script src="~/Content/search/vendor/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
    <script src="~/Content/search/vendor/datepicker/moment.min.js"></script>
    <script src="~/Content/search/vendor/datepicker/daterangepicker.js"></script>
    <script src="~/Content/assets/js/popup_box.js"></script>

    <!-- Main JS-->
    <script src="~/Content/search/js/global.js"></script>
    <script>

        $(document).ready(function () {
            $.ajax({
                url: "/Home/company",
                dataType: "json",
                method: "GET",
                success: function (data) {
                    //console.log(data);
                    //console.log(data[0]);
                    jsonData = JSON.parse(data);
                    var script_data_email_location = ''
                    var script_data_social_links = ''
                    var script_data_map = ''
                    var script_data_video = ''
                    script_data_email_location = '<ul class="info">' +
                        '<li><i class="fa fa-envelope"></i>' + jsonData[0].email + '</li>' +
                        '<li><i class="fa fa-map"></i>' + jsonData[0].address + '</li>' +
                        '</ul>';
                    $("#email_location").html(script_data_email_location);
                    script_data_social_links = '<ul class="social-links">' +
                        '<li><a href="' + jsonData[0].facebook_link + '"><i class="fab fa-facebook"></i></a></li>' +
                        '<li><a href="' + jsonData[0].twitter_link + '" target="_blank"><i class="fab fa-twitter"></i></a></li>' +
                        '<li><a href="' + jsonData[0].linkedin_link + '"><i class="fab fa-linkedin"></i></a></li>' +
                        '<li><a href="' + jsonData[0].instagram_link + '"><i class="fab fa-instagram"></i></a></li>' +
                        '</ul>';
                    $("#social_links").html(script_data_social_links);

                    script_data_map = ' <iframe src="' + jsonData[0].comapny_location_link + '"' +
                        'width = "100%" height = "500px" frameborder = "0"' +
                        'style = "border:0; border-radius: 10px; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.15);"' +
                        'allowfullscreen = "" ></iframe > ';
                    $("#map").html(script_data_map);

                    script_data_video = '<iframe width="100%" height="100%" src="' + jsonData[0].comapny_video_link + '" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>';
                    $("#video").html(script_data_video);
                    //console.log(script_data_video);


                }
            });
            $.ajax({
                url: "/Home/AllProperties",
                dataType: "json",
                method: "GET",
                success: function (data) {
                    //console.log(data);
                    //console.log(data[0]);
                    jsonData = JSON.parse(data);
                    var script_data = ''
                    for (var i = 0; i < jsonData.length; i++) {
                        script_data += '<div class="modal fade" id="myModel' + jsonData[i].id + '" tabindex="-1" aria-labelledby="myModelLabel" aria-hidden="true">' +
                            '<div class="modal-dialog" >' +
                            '<div class="modal-content">' +
                            '<div class="modal-header">' +
                            '<h5 class="modal-title" id="myModelLabel">حجز موعد زياره</h5>' +
                            '<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>' +
                            '</div>' +
                            '<div class="modal-body">' +
                            '<p style="text-align: right;">معلومات عن وكيل العقار</p>' +
                            '<p style="text-align: right; unicode-bidi: plaintext;">الاسم: <strong>' + jsonData[i].agent + '</strong></p>' +
                            '<p style="text-align: right; unicode-bidi: plaintext;">رقم الهاتف: <strong><a href="tel:' + jsonData[i].phone_number + '">' + jsonData[i].phone_number + '</a></strong></p>' +
                            '<p style="text-align: right; unicode-bidi: plaintext;">عنوان العقار: <strong>' + jsonData[i].title + '</strong></p>' +
                            '<p style="text-align: right; unicode-bidi: plaintext;">نوع العقار: <strong>' + jsonData[i].category_name + ' - ' + jsonData[i].display_type + '</strong></p>' +
                            '<p style="text-align: right; unicode-bidi: plaintext;">رقم المرجعي: <strong>#' + jsonData[i].id + '</strong></p>' +
                            '<p style="text-align: right;">تواصل عبر</p>' +
                            '<div class="d-flex align-items-center icons" style="flex-direction: row-reverse;">' +
                            '<a href="' + jsonData[i].whatsapp_ink + '" class="fs-5 d-flex align-items-center justify-content-center">' +
                            '    <span class="fab fa-whatsapp"></span>' +
                            '</a>' +
                            '</div>' +
                            '</div>' +
                            '</div>' +
                            '</div>' +
                            '</div >';
                    }

                    $("#agent_info").html(script_data);


                }
            });

        });
    </script>
    <link href="~/Content/search/css/jquery-ui.css" rel="stylesheet" />
    <script src="~/Content/search/js/jquery-1.1-.2.js"></script>
    <script src="~/Content/search/js/jquery-ui.js"></script>
    @RenderSection("script", required: false)

</body>

</html>
